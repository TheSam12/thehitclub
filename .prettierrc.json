{
  "plugins": [
    "@shopify/prettier-plugin-liquid",
    "prettier-plugin-tailwindcss"
  ],
  "printWidth": 120,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["./config/*.json",
      "./layout/*.liquid",
      "./assets/*.liquid",
      "./sections/*.liquid",
      "./snippets/*.liquid",
      "./templates/*.liquid",
      "./templates/*.json",
      "./templates/customers/*.liquid"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}