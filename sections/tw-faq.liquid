{% liquid
  assign title = section.settings.title
  assign align = section.settings.align
  assign sticker = section.settings.sticker
%}
<div class="tw-container tw-relative tw-m-auto lg:tw-py-10">
  {% if sticker != null %}
    <div class="tw-absolute -tw-top-10 tw-right-0">
      <img src="{{ sticker | image_url }}" width="120" height="120">
    </div>
  {% endif %}
  <div class="tw-text-{{ align }} tw-m-auto tw-pb-5 lg:tw-w-3/4 lg:tw-pb-14">
    <h2 class="tw-pb-4 tw-text-4xl tw-font-bold md:tw-text-7xl">{{ title }}</h2>
  </div>
  <div id="faq">
    <div class="tw-mb-4 tw-w-full">
      <ul class="tw-rounded-2xl">
        <li v-for="(faq, index) in faqs" :key="index">
          <div :class="{'tw-px-4': true, 'tw-py-6': true, 'tw-border-b': index < faqs.length - 1}">
            <div class="tw-relative">
              <a
                href="#"
                @click.prevent="toggleAnswer(faq)"
                v-html="faq.question"
                class="question tw-block tw-flex tw-h-20 tw-w-full tw-cursor-pointer tw-items-center tw-pr-10 tw-text-xl tw-font-bold lg:tw-text-2xl xl:tw-text-3xl"
                :class="{ show: faq.showAnswer }"
              ></a>
            </div>
            <div
              v-if="faq.showAnswer"
              v-html="faq.answer"
              class="answer tw-px-2 tw-pb-2 tw-pt-5 tw-text-lg lg:tw-text-xl xl:tw-text-2xl"
            ></div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
<style>
  .question::before {
    content: '';
    width: 20px;
    height: 3px;
    display: block;
    background: black;
    right: 10px;
    position: absolute;
    top: 50%;
  }
  .question::after {
    content: '';
    width: 3px;
    height: 20px;
    display: block;
    background: black;
    right: 18px;
    position: absolute;
    top: 40%;
    transition: all 0.3s;
  }
  .question.show::after {
    transform: rotate(90deg);
  }
</style>

<script>
  Vue.createApp({
      delimiters:['${', '}'],
      data() {
        return {
          faqs: [
              {% for block in section.blocks %}
                  {% liquid
                      assign question = block.settings.question
                      assign answer = block.settings.answer
                   %}
                  { question: "{{ question }}", answer: "{{ answer }}", showAnswer: false },
              {% endfor %}
          ]
        }
      },
      methods: {
        toggleAnswer(faq) {
          faq.showAnswer =!faq.showAnswer;
        }
      },
    }).mount('#faq');
</script>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "FAQ Title",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "image_picker",
      "id": "sticker",
      "label": "Sticker Image"
    },
    {
      "type": "select",
      "id": "align",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "questions",
      "name": "Q&A",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Test"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer",
          "default": "Answer Test"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
