{% liquid
  assign title = section.settings.title
  assign content = section.settings.content
  assign capsules = section.settings.capsules
  assign pill_1 = section.settings.pill_1
  assign pill_2 = section.settings.pill_2
  assign pill_3 = section.settings.pill_3
  assign gif_url = section.settings.gif_url
  assign desktop_img = section.settings.desktop_img
  assign mobile_img = section.settings.mobile_img
%}

<div class="tw-container tw-m-auto tw-px-4 tw-pt-10 mb:tw-px-10 mb:tw-py-10 tw-pb-0">
  <div class="">
    <div class="tw-text-center lg:tw-w-3/4 tw-m-auto">
      <h2 class="tw-text-4xl md:tw-text-7xl tw-font-bold tw-pb-4">{{ title }}</h2>
      <div class="tw-text-center tw-text-base md:tw-text-2xl tw-pb-14 text-with-gif-content">
        {{ content }}
      </div>
    </div>

    <div class="tw-relative md:tw-flex tw-justify-end md:tw-justify-center tw-items-center tw-gap-6 tw-hidden">
      {% if capsules %}
        <div class="tw-absolute tw-top-15 xl:tw-left-[14rem] tw-left-0 tw-flex tw-flex-col tw-gap-4 md:tw-gap-8">
          <div class="tw-rotate-12 tw-rounded-full tw-bg-gradient-to-br tw-from-amber-200 tw-to-rose-500 tw-px-4 tw-py-3 md:tw-px-6 md:tw-py-4 tw-flex tw-self-center md:tw-self-start tw-items-center tw-relative lg:tw-left-20 tw-w-3/4 md:tw-w-4/5 lg:tw-w-2/3">
            <p
              class="tw-text-white tw-text-center tw-uppercase md:tw-text-xl tw-font-bold md:tw-leading-7 tw-drop-shadow-lg tw-text-xs"
              style="font-family: 'Univers-Extrablack';"
            >
              {{ pill_1 }}
            </p>
          </div>
          <div class="tw-rotate-3 tw-rounded-full tw-bg-gradient-to-br tw-from-fuchsia-500 tw-to-sky-500 tw-px-4 tw-py-3 md:tw-px-6 md:tw-py-4 tw-flex tw-items-center md:tw-self-start tw-w-3/4 md:tw-w-4/5 lg:tw-w-2/3">
            <p
              class="tw-text-white tw-text-center tw-uppercase md:tw-text-xl tw-font-bold md:tw-leading-7 tw-drop-shadow-lg tw-text-xs"
              style="font-family: 'Univers-Extrablack';"
            >
              {{ pill_2 }}
            </p>
          </div>
          <div class="tw--rotate-12 tw-rounded-full tw-bg-gradient-to-br tw-from-lime-400 tw-to-green-600 tw-px-4 tw-py-3 md:tw-px-6 md:tw-py-4 tw-flex tw-self-center md:tw-self-start tw-items-center tw-relative lg:tw-left-20 tw-w-3/4 md:tw-w-4/5 lg:tw-w-2/3">
            <p
              class="tw-text-white tw-text-center tw-uppercase md:tw-text-xl tw-font-bold md:tw-leading-7 tw-drop-shadow-lg tw-text-xs"
              style="font-family: 'Univers-Extrablack';"
            >
              {{ pill_3 }}
            </p>
          </div>
        </div>
      {% endif %}

      {% unless capsules %}
        <div class="md:tw-flex tw-flex-col tw-gap-4 tw-hidden">
          {% for block in section.blocks %}
            {% if forloop.index <= 3 %}
              <div class="tw-text-right">
                <h3 class="tw-text-2xl tw-font-bold tw-mb-2">{{ block.settings.title }}</h3>
                <div class="">
                  {{ block.settings.content }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endunless %}

      {{ gif_url | image_url: width: 600 | image_tag: class: 'tw-sel tw-mr-0 tw-w-3/5 md:tw-w-1/2 xl:tw-w-1/3' }}

      {% unless capsules %}
        <div class="md:tw-flex tw-flex-col tw-gap-4 tw-hidden">
          {% for block in section.blocks %}
            {% if forloop.index > 3 %}
              <div class="tw-text-left">
                <h3 class="tw-text-2xl tw-font-bold tw-mb-2">{{ block.settings.title }}</h3>
                <div class="">
                  {{ block.settings.content }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endunless %}
    </div>
    {% if desktop_img != blank or mobile_img != blank %}
      <div class="tw-flex tw-justify-center {% if desktop_img == blank %}md:tw-hidden{% endif %}">
        <picture>
          <source media="(min-width: 768px)" srcset="{{ desktop_img | image_url: width: 400 }}">
          {{ mobile_img | image_url: width: 700 | image_tag }}
        </picture>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .text-with-gif-content em {
    color: #b1b21e;
    font-style: normal;
    font-weight: bold;
  }
</style>

{% schema %}
{
  "name": "Text with gif",
  "class": "tw-my-8 tw-mb-0",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content",
      "default": "Some text"
    },
    {
      "type": "checkbox",
      "id": "capsules",
      "label": "Enable capsules",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "gif_url",
      "label": "Image for capsules and sife text"
    },
    {
      "type": "text",
      "id": "pill_1",
      "label": "Pill 1"
    },
    {
      "type": "text",
      "id": "pill_2",
      "label": "Pill 2"
    },
    {
      "type": "text",
      "id": "pill_3",
      "label": "Pill 3"
    },
    {
      "type": "image_picker",
      "id": "desktop_img",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_img",
      "label": "Mobile image"
    }
  ],
  "blocks": [
    {
      "type": "side-text",
      "name": "Side text",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Side title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p></p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text with gif"
    }
  ]
}
{% endschema %}
