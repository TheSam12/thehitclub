{% liquid
  assign title = section.settings.title
%}

<div class="tw-container tw-m-auto lg:tw-py-10">
  <div>
    <div class="tw-m-auto tw-pb-5 tw-text-center lg:tw-w-3/4 lg:tw-pb-14">
      <h2 class="tw-pb-4 tw-text-7xl tw-font-bold">{{ title }}</h2>
    </div>
    <div class="tw-grid tw-grid-cols-2 tw-gap-6 lg:tw-grid-cols-4">
      {% for block in section.blocks %}
        <div class="tw-flex tw-flex-col tw-items-center tw-justify-between">
          <div class="tw-flex tw-h-full tw-items-center tw-justify-center">
            {{ block.settings.image | image_url: width: 1200, height: 600 | image_tag: class: 'tw-w-4/5' }}
          </div>
          {%- if block.settings.content != blank -%}
            <h3 class="tw-pt-3 tw-text-center tw-text-3xl tw-font-bold ">{{ block.settings.content }}</h3>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image grid",
  "class": "tw-my-8",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section title"
    }
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Images",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content",
          "default": "Icon text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image grid"
    }
  ]
}
{% endschema %}
