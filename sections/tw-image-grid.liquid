{% liquid
  assign title = section.settings.title
%}

<div class="tw-container tw-m-auto tw-py-10">
  <div>
    <div class="tw-text-center lg:tw-w-3/4 tw-m-auto tw-pb-14">
      <h2 class="tw-text-7xl tw-font-bold tw-pb-4">{{ title }}</h2>
    </div>
    <div class="tw-grid lg:tw-grid-cols-4 tw-grid-cols-2 tw-gap-6">
      {% for block in section.blocks %}
        <div class="tw-flex tw-flex-col tw-justify-between tw-items-center">
          <div class="tw-flex tw-items-center tw-h-full tw-justify-center">
            {{ block.settings.image | image_url: width: 200, height: 200 | image_tag }}
          </div>
          <h3 class="tw-text-3xl tw-font-bold tw-text-center">{{ block.settings.content }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image grid",
  "class": "tw-my-8",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Section title"
    }
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Images",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content",
          "default": "Icon text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image grid"
    }
  ]
}
{% endschema %}
